{{> welcome-menu }}
<div class="container">
    <h1 class="mt-3 mb-4 text-center">Here are some recipes for you</h1>
    <div class="form-container">
        <form>
            <div class="row">
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="search" placeholder="Search by e.g. food name">
                </div>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="filter" placeholder="Filter">
                </div>
            </div>
        </form>
    </div>
    <div class="recipe-listing">
        <div class="row">
            <div class="col-sm-6 mt-4 recipe-item">
                <div class="ingredients-info"></div>
                <div class="image-container">
                    <img src="/images/pasta.jpg" alt="Pasta with tomato sauce and cheese" class="img-fluid">
                </div>
                <div class="actions"></div>
                <h3>Pasta with tomato sauce and cheese</h3>
                <div class="info"></div>
            </div>
        </div>
    </div>
</div>