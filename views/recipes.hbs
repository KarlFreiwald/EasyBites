{{#if user}}
    {{> user-menu }}
{{else}}
    {{> welcome-menu }}
{{/if}}
<div class="container">
    <h1 class="mt-3 mb-4 text-center">Here are some recipes for you</h1>
    <div class="form-container">
        <form>
            <div class="row">
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="search" placeholder="Search by e.g. food name">
                </div>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="filter" placeholder="Filter">
                </div>
            </div>
        </form>
    </div>
    <div class="recipe-listing">
        <div class="row">
            {{#each recipes}}
                <div class="col-sm-6 mt-4 recipe-item">
                    <div class="image-container">
                        <a href="/recipes/1">
                            <img src="{{img_url}}" alt="{{title}}" class="img-fluid">
                        </a>
                    </div>
                    <div class="actions">
                        <button class="btn btn-default" type="button">
                            <img src="/icons/heart.svg" alt="Like">
                        </button>
                        <button class="btn btn-default" type="button">
                            <img src="/icons/chat.svg" alt="Comment">
                        </button>
                        <button class="btn btn-default" type="button">
                            <img src="/icons/share.png" alt="Share">
                        </button>
                    </div>
                    <a href="/recipes/1" class="no-style">
                        <h3 class="mt-2">{{title}}</h3>
                    </a>
                    <div class="info mt-3">
                        <div class="prep-container">
                            <img class="icon" src="/icons/time.svg" alt="Preparation time">
                            <span>{{prep_time}}</span> Min
                        </div>
                        {{#if vegetarian}}
                            <img class="icon" src="/icons/plant.png" alt="vegetarian">
                        {{/if}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>